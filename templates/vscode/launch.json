{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start",
      "type": "erlang",
      "request": "launch",
      "runinterminal": [
        "rebar3",
        "shell",
        // 不支持 ip 后缀作为 long name
        // sname 模式或者带域名的 long name 都支持
        "--name",
        "debug@localhost",
        "--setcookie",
        "123456"
      ],
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "attach",
      "type": "erlang",
      "request": "attach",
      "projectnode": "debug@localhost",
      "cookie": "123456",
      "timeout": 300,
      "cwd": "${workspaceRoot}"
    }
  ]
}

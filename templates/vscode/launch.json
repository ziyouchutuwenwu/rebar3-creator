{
  "version": "0.2.0",
  "configurations": [
    /*
      long name:
        ip 不支持
        域名支持
      short name:
        纯主机名，不带域名支持
        带域名也支持
    */
    /*
      远程调试需要先运行
      rebar3 shell --sname erl-dbg@localhost --setcookie 123456
    */
    {
      "name": "debug",
      "type": "erlang",
      "request": "launch",
      "projectnode": "erl-dbg@localhost",
      "cookie": "123456",
      "timeout": 300,
      "cwd": "${workspaceRoot}"
    }
  ]
}

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "rebar3 compile"
    },
    {
      "label": "deps",
      "type": "shell",
      "command": "rebar3 get-deps"
    },
    {
      "label": "shell",
      "type": "shell",
      "command": "rebar3 shell"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf ./_build; rm -rf ./rebar.lock"
    },
    {
      "label": "ct",
      "type": "shell",
      "command": "rebar3 ct"
    },
    {
      "label": "prod_tar",
      "type": "shell",
      "command": "rebar3 as prod tar"
    },
    {
      "label": "unit",
      "type": "shell",
      "command": "rebar3 eunit"
    }
  ]
}
